<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/frogo_rv_dimen_8dp"
    android:layout_marginEnd="@dimen/frogo_rv_dimen_8dp"
    android:layout_marginBottom="@dimen/frogo_rv_dimen_8dp"
    android:background="@drawable/frogo_rv_bg_card"
    android:elevation="@dimen/frogo_rv_dimen_2dp"
    android:orientation="vertical"
    android:padding="@dimen/frogo_rv_dimen_16dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/frogo_rv_is_empty_data"
        android:textColor="@color/frogoRvcolorBaseBlack"
        android:layout_marginBottom="@dimen/frogo_rv_dimen_8dp"/>

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/frogo_rv_is_empty_data" />

</LinearLayout>